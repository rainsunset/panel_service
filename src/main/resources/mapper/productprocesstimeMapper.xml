<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seer.panel.dao.ProductprocesstimeDao">

    <insert id="addProductprocesstime" parameterType="com.seer.panel.bean.Productprocesstime">
        INSERT INTO productprocesstime
        <trim prefix="(" suffix=")" suffixOverrides=",">
            record_id,
                <if test="userId != null">
                    user_id,
                </if>
                <if test="num != null">
                    num,
                </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{productprocesstimeId},
                <if test="userId != null">
                    #{userId},
                </if>
                <if test="num != null">
                    #{num},
                </if>
        </trim>
    </insert>

    <update id="updateProductprocesstimeById" parameterType="com.seer.panel.bean.Productprocesstime">
        update productprocesstime
        <trim prefix="set" suffixOverrides=",">
                <if test="userId != null">
                    user_id =#{userId},
                </if>
                <if test="num != null">
                    num =#{num},
                </if>
        </trim>
        where record_id = #{productprocesstimeId}
    </update>

    <select id="selectProductprocesstimeList" parameterType="java.util.Map"
            resultType="java.util.Map">
        select
            user_id userId,
            num num,
        record_id productprocesstimeId
        from productprocesstime
        WHERE
        1=1
        <if test="productprocesstimeId != null">
            and record_id = #{productprocesstimeId}
        </if>
        <if test="userId != null">
            and user_id like #{userId}
        </if>
        <if test="num != null">
            and num = #{num}
        </if>
        ORDER BY record_id ASC
    </select>

    <delete id="delProductprocesstimeById" parameterType="java.lang.Integer">
        DELETE FROM  productprocesstime
        where
        record_id = #{productprocesstimeId}
    </delete>

</mapper>
