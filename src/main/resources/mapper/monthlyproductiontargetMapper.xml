<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seer.panel.dao.MonthlyproductiontargetDao">

    <insert id="addMonthlyproductiontarget" parameterType="com.seer.panel.bean.Monthlyproductiontarget">
        INSERT INTO monthlyproductiontarget
        <trim prefix="(" suffix=")" suffixOverrides=",">
            record_id,
                <if test="userId != null">
                    user_id,
                </if>
                <if test="num != null">
                    num,
                </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{monthlyproductiontargetId},
                <if test="userId != null">
                    #{userId},
                </if>
                <if test="num != null">
                    #{num},
                </if>
        </trim>
    </insert>

    <update id="updateMonthlyproductiontargetById" parameterType="com.seer.panel.bean.Monthlyproductiontarget">
        update monthlyproductiontarget
        <trim prefix="set" suffixOverrides=",">
                <if test="userId != null">
                    user_id =#{userId},
                </if>
                <if test="num != null">
                    num =#{num},
                </if>
        </trim>
        where record_id = #{monthlyproductiontargetId}
    </update>

    <select id="selectMonthlyproductiontargetList" parameterType="java.util.Map"
            resultType="java.util.Map">
        select
            user_id userId,
            num num,
        record_id monthlyproductiontargetId
        from monthlyproductiontarget
        WHERE
        1=1
        <if test="monthlyproductiontargetId != null">
            and record_id = #{monthlyproductiontargetId}
        </if>
        <if test="userId != null">
            and user_id like #{userId}
        </if>
        <if test="num != null">
            and num = #{num}
        </if>
        ORDER BY record_id ASC
    </select>

    <delete id="delMonthlyproductiontargetById" parameterType="java.lang.Integer">
        DELETE FROM  monthlyproductiontarget
        where
        record_id = #{monthlyproductiontargetId}
    </delete>

</mapper>
