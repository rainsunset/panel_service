<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seer.panel.dao.RptMachineTotalStatusInfoDao">

    <insert id="addRptMachineTotalStatusInfo" parameterType="com.seer.panel.bean.RptMachineTotalStatusInfo">
        INSERT INTO rptMachineTotalStatusInfo
        <trim prefix="(" suffix=")" suffixOverrides=",">
            record_id,
                <if test="userId != null">
                    user_id,
                </if>
                <if test="num != null">
                    num,
                </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{rptMachineTotalStatusInfoId},
                <if test="userId != null">
                    #{userId},
                </if>
                <if test="num != null">
                    #{num},
                </if>
        </trim>
    </insert>

    <update id="updateRptMachineTotalStatusInfoById" parameterType="com.seer.panel.bean.RptMachineTotalStatusInfo">
        update rptMachineTotalStatusInfo
        <trim prefix="set" suffixOverrides=",">
                <if test="userId != null">
                    user_id =#{userId},
                </if>
                <if test="num != null">
                    num =#{num},
                </if>
        </trim>
        where record_id = #{rptMachineTotalStatusInfoId}
    </update>

    <select id="selectRptMachineTotalStatusInfoList" parameterType="java.util.Map"
            resultType="java.util.Map">
        select
            user_id userId,
            num num,
        record_id rptMachineTotalStatusInfoId
        from rptMachineTotalStatusInfo
        WHERE
        1=1
        <if test="rptMachineTotalStatusInfoId != null">
            and record_id = #{rptMachineTotalStatusInfoId}
        </if>
        <if test="userId != null">
            and user_id like #{userId}
        </if>
        <if test="num != null">
            and num = #{num}
        </if>
        ORDER BY record_id ASC
    </select>

    <delete id="delRptMachineTotalStatusInfoById" parameterType="java.lang.Integer">
        DELETE FROM  rptMachineTotalStatusInfo
        where
        record_id = #{rptMachineTotalStatusInfoId}
    </delete>

</mapper>
