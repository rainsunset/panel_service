<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seer.panel.dao.MachinestatushistoryDao">

    <insert id="addMachinestatushistory" parameterType="com.seer.panel.bean.Machinestatushistory">
        INSERT INTO machinestatushistory
        <trim prefix="(" suffix=")" suffixOverrides=",">
            record_id,
                <if test="userId != null">
                    user_id,
                </if>
                <if test="num != null">
                    num,
                </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{machinestatushistoryId},
                <if test="userId != null">
                    #{userId},
                </if>
                <if test="num != null">
                    #{num},
                </if>
        </trim>
    </insert>

    <update id="updateMachinestatushistoryById" parameterType="com.seer.panel.bean.Machinestatushistory">
        update machinestatushistory
        <trim prefix="set" suffixOverrides=",">
                <if test="userId != null">
                    user_id =#{userId},
                </if>
                <if test="num != null">
                    num =#{num},
                </if>
        </trim>
        where record_id = #{machinestatushistoryId}
    </update>

    <select id="selectMachinestatushistoryList" parameterType="java.util.Map"
            resultType="java.util.Map">
        select
            user_id userId,
            num num,
        record_id machinestatushistoryId
        from machinestatushistory
        WHERE
        1=1
        <if test="machinestatushistoryId != null">
            and record_id = #{machinestatushistoryId}
        </if>
        <if test="userId != null">
            and user_id like #{userId}
        </if>
        <if test="num != null">
            and num = #{num}
        </if>
        ORDER BY record_id ASC
    </select>

    <delete id="delMachinestatushistoryById" parameterType="java.lang.Integer">
        DELETE FROM  machinestatushistory
        where
        record_id = #{machinestatushistoryId}
    </delete>

</mapper>
