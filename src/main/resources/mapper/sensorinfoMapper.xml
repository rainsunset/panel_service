<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seer.panel.dao.SensorinfoDao">

    <insert id="addSensorinfo" parameterType="com.seer.panel.bean.Sensorinfo">
        INSERT INTO sensorinfo
        <trim prefix="(" suffix=")" suffixOverrides=",">
            record_id,
                <if test="userId != null">
                    user_id,
                </if>
                <if test="num != null">
                    num,
                </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{sensorinfoId},
                <if test="userId != null">
                    #{userId},
                </if>
                <if test="num != null">
                    #{num},
                </if>
        </trim>
    </insert>

    <update id="updateSensorinfoById" parameterType="com.seer.panel.bean.Sensorinfo">
        update sensorinfo
        <trim prefix="set" suffixOverrides=",">
                <if test="userId != null">
                    user_id =#{userId},
                </if>
                <if test="num != null">
                    num =#{num},
                </if>
        </trim>
        where record_id = #{sensorinfoId}
    </update>

    <select id="selectSensorinfoList" parameterType="java.util.Map"
            resultType="java.util.Map">
        select
            user_id userId,
            num num,
        record_id sensorinfoId
        from sensorinfo
        WHERE
        1=1
        <if test="sensorinfoId != null">
            and record_id = #{sensorinfoId}
        </if>
        <if test="userId != null">
            and user_id like #{userId}
        </if>
        <if test="num != null">
            and num = #{num}
        </if>
        ORDER BY record_id ASC
    </select>

    <delete id="delSensorinfoById" parameterType="java.lang.Integer">
        DELETE FROM  sensorinfo
        where
        record_id = #{sensorinfoId}
    </delete>

</mapper>
