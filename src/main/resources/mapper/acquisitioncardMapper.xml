<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seer.panel.dao.AcquisitioncardDao">

    <insert id="addAcquisitioncard" parameterType="com.seer.panel.bean.Acquisitioncard">
        INSERT INTO acquisitioncard
        <trim prefix="(" suffix=")" suffixOverrides=",">
            record_id,
                <if test="userId != null">
                    user_id,
                </if>
                <if test="num != null">
                    num,
                </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{acquisitioncardId},
                <if test="userId != null">
                    #{userId},
                </if>
                <if test="num != null">
                    #{num},
                </if>
        </trim>
    </insert>

    <update id="updateAcquisitioncardById" parameterType="com.seer.panel.bean.Acquisitioncard">
        update acquisitioncard
        <trim prefix="set" suffixOverrides=",">
                <if test="userId != null">
                    user_id =#{userId},
                </if>
                <if test="num != null">
                    num =#{num},
                </if>
        </trim>
        where record_id = #{acquisitioncardId}
    </update>

    <select id="selectAcquisitioncardList" parameterType="java.util.Map"
            resultType="java.util.Map">
        select
            user_id userId,
            num num,
        record_id acquisitioncardId
        from acquisitioncard
        WHERE
        1=1
        <if test="acquisitioncardId != null">
            and record_id = #{acquisitioncardId}
        </if>
        <if test="userId != null">
            and user_id like #{userId}
        </if>
        <if test="num != null">
            and num = #{num}
        </if>
        ORDER BY record_id ASC
    </select>

    <delete id="delAcquisitioncardById" parameterType="java.lang.Integer">
        DELETE FROM  acquisitioncard
        where
        record_id = #{acquisitioncardId}
    </delete>

</mapper>
