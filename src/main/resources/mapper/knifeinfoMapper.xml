<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seer.panel.dao.KnifeinfoDao">

    <insert id="addKnifeinfo" parameterType="com.seer.panel.bean.Knifeinfo">
        INSERT INTO knifeinfo
        <trim prefix="(" suffix=")" suffixOverrides=",">
            record_id,
                <if test="userId != null">
                    user_id,
                </if>
                <if test="num != null">
                    num,
                </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{knifeinfoId},
                <if test="userId != null">
                    #{userId},
                </if>
                <if test="num != null">
                    #{num},
                </if>
        </trim>
    </insert>

    <update id="updateKnifeinfoById" parameterType="com.seer.panel.bean.Knifeinfo">
        update knifeinfo
        <trim prefix="set" suffixOverrides=",">
                <if test="userId != null">
                    user_id =#{userId},
                </if>
                <if test="num != null">
                    num =#{num},
                </if>
        </trim>
        where record_id = #{knifeinfoId}
    </update>

    <select id="selectKnifeinfoList" parameterType="java.util.Map"
            resultType="java.util.Map">
        select
            user_id userId,
            num num,
        record_id knifeinfoId
        from knifeinfo
        WHERE
        1=1
        <if test="knifeinfoId != null">
            and record_id = #{knifeinfoId}
        </if>
        <if test="userId != null">
            and user_id like #{userId}
        </if>
        <if test="num != null">
            and num = #{num}
        </if>
        ORDER BY record_id ASC
    </select>

    <delete id="delKnifeinfoById" parameterType="java.lang.Integer">
        DELETE FROM  knifeinfo
        where
        record_id = #{knifeinfoId}
    </delete>

</mapper>
