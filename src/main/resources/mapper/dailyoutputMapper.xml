<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seer.panel.dao.DailyoutputDao">

    <insert id="addDailyoutput" parameterType="com.seer.panel.bean.Dailyoutput">
        INSERT INTO dailyoutput
        <trim prefix="(" suffix=")" suffixOverrides=",">
            record_id,
                <if test="userId != null">
                    user_id,
                </if>
                <if test="num != null">
                    num,
                </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{dailyoutputId},
                <if test="userId != null">
                    #{userId},
                </if>
                <if test="num != null">
                    #{num},
                </if>
        </trim>
    </insert>

    <update id="updateDailyoutputById" parameterType="com.seer.panel.bean.Dailyoutput">
        update dailyoutput
        <trim prefix="set" suffixOverrides=",">
                <if test="userId != null">
                    user_id =#{userId},
                </if>
                <if test="num != null">
                    num =#{num},
                </if>
        </trim>
        where record_id = #{dailyoutputId}
    </update>

    <select id="selectDailyoutputList" parameterType="java.util.Map"
            resultType="java.util.Map">
        select
            user_id userId,
            num num,
        record_id dailyoutputId
        from dailyoutput
        WHERE
        1=1
        <if test="dailyoutputId != null">
            and record_id = #{dailyoutputId}
        </if>
        <if test="userId != null">
            and user_id like #{userId}
        </if>
        <if test="num != null">
            and num = #{num}
        </if>
        ORDER BY record_id ASC
    </select>

    <delete id="delDailyoutputById" parameterType="java.lang.Integer">
        DELETE FROM  dailyoutput
        where
        record_id = #{dailyoutputId}
    </delete>

</mapper>
