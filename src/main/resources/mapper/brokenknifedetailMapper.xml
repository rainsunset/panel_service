<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seer.panel.dao.BrokenknifedetailDao">

    <insert id="addBrokenknifedetail" parameterType="com.seer.panel.bean.Brokenknifedetail">
        INSERT INTO brokenknifedetail
        <trim prefix="(" suffix=")" suffixOverrides=",">
            record_id,
                <if test="userId != null">
                    user_id,
                </if>
                <if test="num != null">
                    num,
                </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{brokenknifedetailId},
                <if test="userId != null">
                    #{userId},
                </if>
                <if test="num != null">
                    #{num},
                </if>
        </trim>
    </insert>

    <update id="updateBrokenknifedetailById" parameterType="com.seer.panel.bean.Brokenknifedetail">
        update brokenknifedetail
        <trim prefix="set" suffixOverrides=",">
                <if test="userId != null">
                    user_id =#{userId},
                </if>
                <if test="num != null">
                    num =#{num},
                </if>
        </trim>
        where record_id = #{brokenknifedetailId}
    </update>

    <select id="selectBrokenknifedetailList" parameterType="java.util.Map"
            resultType="java.util.Map">
        select
            user_id userId,
            num num,
        record_id brokenknifedetailId
        from brokenknifedetail
        WHERE
        1=1
        <if test="brokenknifedetailId != null">
            and record_id = #{brokenknifedetailId}
        </if>
        <if test="userId != null">
            and user_id like #{userId}
        </if>
        <if test="num != null">
            and num = #{num}
        </if>
        ORDER BY record_id ASC
    </select>

    <delete id="delBrokenknifedetailById" parameterType="java.lang.Integer">
        DELETE FROM  brokenknifedetail
        where
        record_id = #{brokenknifedetailId}
    </delete>

</mapper>
