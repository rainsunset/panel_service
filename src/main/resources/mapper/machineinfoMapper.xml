<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seer.panel.dao.MachineinfoDao">

    <insert id="addMachineinfo" parameterType="com.seer.panel.bean.Machineinfo">
        INSERT INTO machineinfo
        <trim prefix="(" suffix=")" suffixOverrides=",">
            record_id,
                <if test="userId != null">
                    user_id,
                </if>
                <if test="num != null">
                    num,
                </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{machineinfoId},
                <if test="userId != null">
                    #{userId},
                </if>
                <if test="num != null">
                    #{num},
                </if>
        </trim>
    </insert>

    <update id="updateMachineinfoById" parameterType="com.seer.panel.bean.Machineinfo">
        update machineinfo
        <trim prefix="set" suffixOverrides=",">
                <if test="userId != null">
                    user_id =#{userId},
                </if>
                <if test="num != null">
                    num =#{num},
                </if>
        </trim>
        where record_id = #{machineinfoId}
    </update>

    <select id="selectMachineinfoList" parameterType="java.util.Map"
            resultType="java.util.Map">
        select
            user_id userId,
            num num,
        record_id machineinfoId
        from machineinfo
        WHERE
        1=1
        <if test="machineinfoId != null">
            and record_id = #{machineinfoId}
        </if>
        <if test="userId != null">
            and user_id like #{userId}
        </if>
        <if test="num != null">
            and num = #{num}
        </if>
        ORDER BY record_id ASC
    </select>

    <delete id="delMachineinfoById" parameterType="java.lang.Integer">
        DELETE FROM  machineinfo
        where
        record_id = #{machineinfoId}
    </delete>

</mapper>
